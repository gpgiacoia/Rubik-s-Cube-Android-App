<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Place content a bit lower on the screen -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"/>

    <!-- Title -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Back"
        android:layout_width="100sp"
        android:layout_height="55sp"
        android:textColor="#FFFFFFFF"
        app:backgroundTint="#D32F2F"
        android:text="Back"
        android:textSize="17sp"
        app:fontFamily="@font/irish_grover"
        app:cornerRadius="16dp"
        app:strokeColor="#BDBDBD"
        app:strokeWidth="1dp"
        android:elevation="6dp"
        app:rippleColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Subtitle -->

    <!-- Card container for the list -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:fontFamily="@font/irish_grover"
        android:padding="12sp"
        android:text="Connect to a Device"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_top" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp"
        android:paddingBottom="16sp"
        android:text="Tap Paired to Connect"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/list_card"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="29sp"
        app:cardBackgroundColor="#F3E5F5"
        app:cardCornerRadius="16sp"
        app:cardElevation="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1sp">

        <ListView
            android:id="@+id/device_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="8sp"
            android:padding="8sp"
            tools:listitem="@android:layout/simple_list_item_1" />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
